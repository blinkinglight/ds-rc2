run:
	make -j 3 css templ air

build:
	make -j 3 templ-prod css-prod bin

bin:
	 GOARCH=arm64 GOOS=linux go build -a -o bin/poker .

templ-prod:
	@templ generate

css-prod:
	tailwindcss -i .cfg/input.css -o assets/styles.css --minify

css:
	tailwindcss -i .cfg/input.css -o assets/styles.css --watch

templ:
	@templ generate -watch

air:
	@air -c .cfg/.air.toml
